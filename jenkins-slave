version: "3"
services:
  jenkins-build:
    image: jenkins-slave
    restart: always
    hostname: jenkins-build
    container_name: jenkins-build
    environment: 
      - JAVA_OPTS=-Duser.timezone=Asia/Shanghai
      - JENKINS_URL=http://172.16.85.36:8086
      - JENKINS_SECRET=6e602a895a54522e6a02b6309c391654b6ad2e2f6c4cf72288c6d65a43d71fb0
      - JENKINS_AGENT_NAME=jenkins-build
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
      - '/opt/data/apps/jenkins-slave/data:/var/jenkins_home'
    networks:
      - 'devops'
networks:
  devops:
    external: true



FROM jenkinsci/jnlp-slave:alpine
USER root

RUN sed -i "s#http://dl-cdn.alpinelinux.org/#http://mirrors.ustc.edu.cn/#g" /etc/apk/repositories
RUN apk -U add ansible docker openssh sshpass rsync curl
